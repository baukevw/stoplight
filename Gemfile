source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.6'

gem 'activesupport'
gem 'compass'
gem 'foreman'
gem 'httparty'
gem 'puma'
gem 'rake'
gem 'sinatra'
gem 'time-lord'
gem 'rabl'
gem 'xml-simple'

group :development do
  gem 'guard'
  gem 'guard-compass'
  gem 'guard-coffeescript'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'shotgun'
  gem 'therubyracer'
end

group :test do
  gem 'rack-test'
  gem 'rspec'
  gem 'vcr'
  gem 'webmock'
end

group :development, :test do
  gem 'capistrano', '~> 3.2'
  gem 'capistrano-rails'
  gem 'capistrano-bundler'
  gem 'capistrano-rbenv'
  gem 'capistrano-passenger'
end
